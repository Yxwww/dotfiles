{
  "workbench.editor.highlightModifiedTabs": true,
  // Toggle between terminal and editor focus
  "breadcrumbs.enabled": true,
  "editor.fontFamily": "'Monolisa', Consolas,Menlo, Monaco, 'Courier New', monospace",
  "editor.fontWeight": "400",
  "editor.autoIndent": "full",
  "editor.autoFixOnSave": false,
  "editor.insertSpaces": false,
  "editor.fontLigatures": true,
  "files.insertFinalNewline": true,
  // Configure glob patterns for excluding files and folders.
  "files.exclude": {
    "**/.yalc": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/.sass-cashe": true,
    "**/doc": true,
    "**/.storage": true
  },
  "files.trimTrailingWhitespace": true,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.visualstar": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    // add shortcut to focus the global search result list
    {
      "before": ["<leader>", "f", "f"],
      "after": [],
      "commands": [
        {
          // open file search tool like command + p
          "command": "workbench.action.quickOpen",
          "when": "editorFocus"
        }
      ]
    },
    {
      "before": ["<leader>", "f", "g"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.focusActiveEditorGroup",
          "when": "editorFocus"
        },
        {
          "command": "workbench.action.findInFiles",
          "when": "editorFocus"
        }
      ]
    },

    {
      "before": ["leader", "q"],
      "after": [],
      "commands": [
        {
          // close current tab
          "command": "workbench.action.closeActiveEditor"
        }
      ]
    },
    {
      "before": ["leader", "f"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.formatSelection"
        }
      ]
    },
    {
      "before": ["K"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.peekTypeDefinition",
          "when": "editorTextFocus"
        }
      ]
    },
    {
      "before": ["L"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.showHover",
          "when": "editorTextFocus"
        }
      ]
    },
    {
      "before": ["g", "r"],
      "after": [],
      "commands": [
        {
          // open reference list
          "command": "editor.action.referenceSearch.trigger"
        }
      ]
    },

    // MARK: GIT
    {
      "before": ["leader", "g", "c"],
      "after": [],
      "commands": [
        {
          "command": "workbench.view.scm",
          "when": "workbench.scm.active"
        },
        // focus on the sidebar
        {
          "command": "workbench.action.focusSideBar"
        }
      ]
    },
    {
      "before": ["leader", "g", "s"],
      "after": [],
      "commands": [
        {
          "command": "workbench.view.scm",
          "when": "workbench.scm.active"
        }
      ]
    },
    {
      "before": ["leader", "r", "n"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.rename"
        }
      ]
    },
    {
      "before": ["leader", "n", "e"],
      "after": [],
      "commands": [
        // toggle the sidebar and focus on it if when the sidebar is open
        {
          "command": "workbench.action.toggleSidebarVisibility"
        }
        // {
        //   "command": "workbench.action.focusSideBar",
        //   "when": "sideBarVisible"
        // }
      ]
    },
    {
      "before": ["leader", "n", "f"],
      "after": [],
      "commands": [
        {
          "command": "workbench.files.action.showActiveFileInExplorer",
          "when": "editorTextFocus"
        }
      ]
    },
    {
      "before": ["g", "p"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.peekImplementation"
        }
      ]
    },
    {
      "before": ["c", "c"],
      "after": ["d", "d", "O"]
    }
  ],
  "vim.leader": ",",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "files.associations": {
    "*.ejs": "html"
  },
  "workbench.editor.showIcons": false,
  "material-icon-theme.activeIconPack": "react_redux",
  "workbench.colorTheme": "Tokyo Night Light",
  // change active border color to bright yellow
  "workbench.colorCustomizations": {
    "focusBorder": "#f6f65a"
  },
  "editor.smoothScrolling": true,
  "zenMode.hideLineNumbers": false,
  "editor.lineNumbers": "relative",
  "editor.cursorStyle": "line",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  // "eslint.codeActionsOnSave.mode": "problems",
  "[json]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "tailwindCSS.colorDecorators": true,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "javascriptreact": "html",
    "typescriptreact": "html"
  },
  "search.useIgnoreFiles": true,
  "editor.tabSize": 2,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "workbench.preferredDarkColorTheme": "Nord",
  "editor.inlineSuggest.enabled": true,
  "window.autoDetectColorScheme": true,
  "workbench.preferredLightColorTheme": "Tokyo Night Light",
  "svelte.enable-ts-plugin": true,
  "git.autofetch": true,
  "vim.highlightedyank.enable": true,
  "terminal.integrated.tabs.enabled": false,
  "editor.fontSize": 15,
  "git.confirmSync": false,
  "editor.accessibilitySupport": "off",
  "redhat.telemetry.enabled": false,
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "editor.guides.indentation": false,
  "editor.minimap.enabled": false,
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingDelete": "never",
  "editor.autoClosingOvertype": "never",
  "editor.autoClosingQuotes": "never",
  "html.autoClosingTags": false,
  "javascript.autoClosingTags": false,
  "typescript.autoClosingTags": false,
  "editor.formatOnSave": true,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.fontSize": 14,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "gitlens.mode.active": "zen"
}
